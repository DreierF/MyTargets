<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="selectableItemBackground">@drawable/selector_item_light</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme.Overlay">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppBaseTheme.CustomToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppBaseTheme.CustomToolbar.Translucent" parent="AppBaseTheme.CustomToolbar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="AppTheme.Overlay" parent="AppBaseTheme.Overlay"/>

    <style name="AppTheme.CustomToolbar" parent="AppBaseTheme.CustomToolbar"/>

    <style name="AppTheme.CustomToolbar.Translucent" parent="AppBaseTheme.CustomToolbar.Translucent"/>

    <style name="AppTheme.CustomToolbar.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>