<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="card_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@color/md_grey_200</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/primaryTextDefaultMaterialLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="secondaryText">
        <item name="android:textColor">@color/secondaryTextDefaultMaterialLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label" parent="secondaryText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

    <style name="header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/md_grey_200</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialItem">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/selector_item_light</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/raise</item>
    </style>

    <style name="fabMenu">
        <item name="menu_buttonSpacing">4dp</item>
        <item name="menu_animationDelayPerItem">50</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_labels_margin">16dp</item>
        <item name="menu_backgroundColor">@color/dim_overlay</item>
        <item name="menu_labels_showShadow">true</item>
    </style>

    <style name="fabMenuLabelsStyle">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginRight">17dip</item>
        <item name="android:layout_marginBottom">3.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="fabBow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/fabBow</item>
        <item name="fab_colorPressed">@color/md_grey_600</item>
        <item name="fab_colorRipple">@color/md_grey_600</item>
        <item name="fab_size">mini</item>
    </style>

    <style name="propertyTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">52dp</item>
    </style>

    <style name="propertyFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="propertyImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|start</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="propertyAddButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">72dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">72dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
