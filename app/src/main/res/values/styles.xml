<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="card_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="primary_text">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="secondary_text">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label" parent="secondary_text">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

    <style name="MaterialItem">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="addButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    
    <style name="fabMenu">
        <item name="menu_buttonSpacing">4dp</item>
        <item name="menu_animationDelayPerItem">50</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_labels_margin">16dp</item>
        <item name="menu_backgroundColor">@color/dim_overlay</item>
        <!--<item name="menu_colorPressed">@color/colorAccentDark</item>
        <item name="menu_colorRipple">@color/colorAccentDark</item>
        <item name="menu_icon">@drawable/ic_add_white_24dp</item>
        <item name="menu_openDirection">up</item>-->
    </style>

</resources>
