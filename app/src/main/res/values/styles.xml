<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="selectableItemBackground">@drawable/selector_item_light</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <!-- This changes the overlay background -->
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/LStyled.ActionMode.Title</item>
        <item name="closeItemLayout">@layout/abc_action_mode_close_item_material_mine</item>
    </style>

    <style name="LStyled.ActionMode.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBaseTheme.Overlay">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppBaseTheme.CustomToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppBaseTheme.CustomToolbar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="AppTheme.Overlay" parent="AppBaseTheme.Overlay"/>

    <style name="AppTheme.CustomToolbar" parent="AppBaseTheme.CustomToolbar"/>

    <style name="card_list">
        <item name="android:id">@android:id/list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="primary_text">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="secondary_text">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label" parent="secondary_text">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

</resources>
