<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.dreier.mytargets.NewRoundActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/divider">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/outdoor"
                    android:id="@+id/outdoor"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indoor"
                    android:id="@+id/indoor"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/distance"
                android:layout_marginTop="16dp"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arrows_per_passe"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_vertical"
                style="?android:attr/listSeparatorTextViewStyle" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:id="@+id/ppp3"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/six"
                    android:id="@+id/ppp6"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bow"
            style="?android:attr/listSeparatorTextViewStyle" />

            <Spinner
                android:id="@+id/bow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/add_bow"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@android:color/secondary_text_light"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/add_bow"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/target_round"
                android:layout_marginTop="16dp"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/target_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_above="@+id/but_bar"
        android:layout_alignLeft="@+id/but_bar"
        android:layout_alignStart="@+id/but_bar" />

    <LinearLayout
        android:id="@+id/but_bar"
        style="@android:style/Holo.Light.ButtonBar.AlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/cancel_button"
            style="@android:style/Holo.Light.ButtonBar.AlertDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:text="@string/cancel" />
        <Button
            android:id="@+id/new_round_button"
            style="@android:style/Holo.Light.ButtonBar.AlertDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:text="@string/new_round" />
    </LinearLayout>

</RelativeLayout>