<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:padding="4dp">

        <TextView
            android:id="@+id/archer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/archer"
            android:textColor="@color/md_black_1000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/archer_description"
            android:background="@color/md_black_1000"/>

        <TextView
            android:id="@+id/archer_signature_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/tap_to_sign"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/signature_archer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:padding="4dp">

        <TextView
            android:id="@+id/witness_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/target_captain"
            android:textColor="@color/md_black_1000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/witness_description"
            android:background="@color/md_black_1000"/>

        <TextView
            android:id="@+id/witness_signature_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tap_to_sign"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/signature_witness"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

</LinearLayout>
