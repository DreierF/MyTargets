<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:clipChildren="false"
              android:layout_height="wrap_content"
              android:clipToPadding="false"
              android:layout_gravity="end"
              android:layout_marginTop="@dimen/fab_menu_item_margin_top"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/TitleCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_view"
            style="@style/TitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mini_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/mini_fab_margin_bottom"
        android:layout_marginEnd="@dimen/mini_fab_margin_right"
        android:layout_marginLeft="@dimen/mini_fab_margin_left"
        android:layout_marginRight="@dimen/mini_fab_margin_right"
        android:layout_marginStart="@dimen/mini_fab_margin_left"
        android:layout_marginTop="@dimen/mini_fab_margin_top"
        app:fabSize="mini"
        app:paddingEnd="0dp"
        app:paddingStart="0dp"/>

</LinearLayout>
