<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="3dp"/>

            <solid android:color="#88888888"/>

        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="3dp"/>

            <solid android:color="#EBEBEB"/>

            <padding
                android:bottom="6dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp"/>

        </shape>
    </item>
</layer-list>