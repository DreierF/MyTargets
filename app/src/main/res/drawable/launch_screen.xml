<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:opacity="opaque">
    <!-- The background color, preferably the same as your normal theme -->
    <item android:drawable="@color/colorPrimary"/>
    <!-- App logo - 144dp color version of the app icon -->
    <item android:bottom="@dimen/launchscreen_product_logo_bottom">
        <bitmap
            android:gravity="center"
            android:src="@drawable/product_logo_144dp"/>
    </item>
    <!-- Brand name - 48dp height -->
    <item android:bottom="@dimen/launchscreen_brand_logo_bottom">
        <bitmap
            android:gravity="bottom|center"
            android:src="@drawable/brand_name_48dp"/>
    </item>
</layer-list>
