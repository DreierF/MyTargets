<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
          android:drawable="@drawable/ic_timer_accent_24dp"/> <!-- checked -->
    <item android:state_pressed="true"
          android:drawable="@drawable/ic_timer_accent_24dp"/> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/ic_timer_off_grey600_24dp"/> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/ic_timer_off_grey600_24dp"/> <!-- hovered -->
    <item android:drawable="@drawable/ic_timer_off_grey600_24dp"/> <!-- default -->
</selector>