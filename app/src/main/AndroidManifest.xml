<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.dreier.mytargets">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-sdk tools:overrideLibrary="me.oriley.homage, me.oriley.homage.recyclerview" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ApplicationInstance"
        android:allowBackup="true"
        android:backupAgent=".utils.MyBackupAgent"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/my_targets"
        android:restoreAnyVersion="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIy_jZMyyGuh5M-ICvUll4H1WyF1R9M8cUcN5wVw" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/my_targets"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.CustomToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$TrainingActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$TimerActivity"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:launchMode="singleTop"
            android:parentActivityName=".activities.InputActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InputActivity" />
        </activity>
        <activity
            android:name=".activities.InputActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditTrainingActivity"
            android:label="@string/new_round"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditRoundActivity"
            android:label="@string/new_round"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditStandardRoundActivity"
            android:label="@string/new_round_template"
            android:parentActivityName=".activities.StandardRoundActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.StandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditBowActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditArrowActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ScoreboardActivity"
            android:label="@string/scoreboard"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity" />
        </activity>
        <activity
            android:name=".activities.StatisticsActivity"
            android:label="@string/statistic" />
        <activity
            android:name=".activities.ItemSelectActivity$ArrowActivity"
            android:label="@string/arrow"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$BowActivity"
            android:label="@string/bow"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$EnvironmentActivity"
            android:label="@string/environment"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$TargetActivity"
            android:label="@string/target_face"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$DistanceActivity"
            android:label="@string/distance"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$WindSpeedActivity"
            android:label="@string/wind_speed"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.ItemSelectActivity$EnvironmentActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ItemSelectActivity$EnvironmentActivity" />
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$WindDirectionActivity"
            android:label="@string/wind_direction"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.ItemSelectActivity$EnvironmentActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ItemSelectActivity$EnvironmentActivity" />
        </activity>
        <activity
            android:name=".activities.StandardRoundActivity"
            android:label="@string/standard_rounds"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditTrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditTrainingActivity" />
        </activity>

        <!-- Preferences activity -->
        <activity
            android:name=".activities.SimpleFragmentActivity$SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/preferences"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".activities.SimpleFragmentActivity$SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$SettingsActivity" />
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$LicencesActivity"
            android:label="@string/about"
            android:parentActivityName=".activities.SimpleFragmentActivity$SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$SettingsActivity" />
        </activity>
        <activity
            android:name=".activities.DonateActivity"
            android:parentActivityName=".activities.SimpleFragmentActivity$AboutActivity"
            android:theme="@style/Theme.AppCompat.Translucent">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$AboutActivity" />
        </activity>
        <activity android:name=".activities.ArrowRankingDetailsActivity" />
    </application>

</manifest>