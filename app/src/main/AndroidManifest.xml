<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.dreier.mytargets" >

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- TODO: Register at https://developer.android.com/google/backup/signup.html?csw=1 -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:backupAgent=".MyBackupAgent">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrainingActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.MainActivity" />
        </activity>
        <activity
            android:name=".RoundActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".TrainingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.TrainingActivity" />
        </activity>
        <activity
            android:name=".PasseActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".RoundActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.RundeActivity" />
        </activity>
        <activity
            android:name=".NewRoundActivity"
            android:label="@string/title_activity_new_round"
            android:parentActivityName=".TrainingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.TrainingActivity" />
        </activity>
        <activity
            android:name=".BowActivity"
            android:label="@string/my_bows"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.MainActivity" />
        </activity>
        <activity
            android:name=".EditBowActivity"
            android:label="@string/title_activity_edit_bow"
            android:theme="@style/AppTheme.Overlay"
            android:parentActivityName=".BowActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.dreier.mytargets.BowActivity" />
        </activity>
    </application>

</manifest>
