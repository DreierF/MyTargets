<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.dreier.mytargets">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:backupAgent=".utils.MyBackupAgent"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIy_jZMyyGuh5M-ICvUll4H1WyF1R9M8cUcN5wVw" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.CustomToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RoundActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PasseActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.RoundActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RoundActivity" />
        </activity>
        <activity
            android:name=".activities.InputActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.PasseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PasseActivity" />
        </activity>
        <activity
            android:name=".activities.EditRoundActivity"
            android:label="@string/new_round"
            android:parentActivityName=".activities.RoundActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RoundActivity" />
        </activity>
        <activity
            android:name=".activities.EditBowActivity"
            android:label="@string/add_bow"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EditArrowActivity"
            android:label="@string/add_arrow"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ScoreboardActivity"
            android:label="@string/scoreboard"
            android:parentActivityName=".activities.PasseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PasseActivity" />
        </activity>
        <activity
            android:name=".activities.StatisticsActivity"
            android:label="@string/statistic" />
    </application>
</manifest>
